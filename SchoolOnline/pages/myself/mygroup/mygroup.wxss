/* mygroup.wxss */


.showman>.man {
  border-bottom: #bdbdbd 1px inset;
  height: 50px;
  padding-left: 10px;
  align-items: center;
  display: flex;
  position: relative;
}

.showman>.man>i {
  margin-right: 10px;
  font-size: 20px;
}

.showman>.man>.lock {
  opacity: 0;
}

.showman>.man>.deleteIco {
  position: absolute;
  right: 15px;
}

.button {
  position: absolute;
  bottom: 10px;
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.button>view {
  text-align: center;
  width: 40%;
  font-size: 16px;
  line-height: 45px;
  background-color: #9e9e9e;
  color: #ffffff;
  box-sizing: border-box;
  border-radius: 3px;
}
