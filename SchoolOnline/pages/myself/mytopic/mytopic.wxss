.swiper_tab {
  width: 100%;
  text-align: center;
  line-height: 40px;
  display: flex;
  justify-content: space-around;
}

.swiper_tab_list {
  font-size: 15px;
  width: 25%;
  color: #9e9e9e;
}

.on {
  color: #0288d1;
  border-bottom: 2px inset #0288d1;
}

.swiper-box {
  height: 100%;
  width: 100%;
}

.floor {
  padding: 10px;
  border-bottom: #d6d6d6 inset 1px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.floor>text {
  margin-left: 25px;
}

.floor>.title_box>i {
  position: absolute;
  font-size: 19px;
  color: #757575;
}

.floor>.title_box {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.floor>.title_box>text {
  width: 90%;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.floor>.msg_box {
  display: flex;
  align-items: center;
  position: absolute;
  right: 8px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.floor>.course_box {
  display: flex;
  align-items: center;
  position: absolute;
  right: 60px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.floor .title {
  font-size: 15px;
  margin-left: 25px;
}

.floor .from {
  font-size: 11px;
  color: #9e9e9e;
  margin-bottom: 25px;
}

.my_follow .floor .from{
  margin-bottom: 5px;
}

.my_follow .floor .title_box{
  font-size: 14px;
  margin-bottom: 0px;
}

.my_follow .floor .detail{
  margin-bottom: 100px;
  width: 90%;
}

.my_follow .floor .course_box{
  right: 10px;
}

.my_follow .floor .floor_box{
  display: flex;
  align-items: center;
  position: absolute;
  right: 10px;
  top: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.my_follow .floor .top_floor{
  background-color: #e7e7e7;
  position: absolute;
  right: 10%;
  width: 80%;
  bottom: 30px;
  padding: 10px;
  box-sizing: border-box;
}

.top_floor .title{
  padding: 0;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5px;
}