/**index.wxss**/

.swiper_tab {
  width: 100%;
  text-align: center;
  line-height: 40px;
  display: flex;
  justify-content: space-around;
}

.swiper_tab_list {
  font-size: 16px;
  width: 25%;
  color: #9e9e9e;
}

.on {
  color: #0288d1;
  border-bottom: 2px inset #0288d1;
}

.swiper-box {
  height: 100%;
  width: 100%;
}

.floor {
  padding: 10px;
  border-bottom: #d6d6d6 inset 1px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.floor>text {
  margin-left: 25px;
}

.floor>.title_box>i {
  position: absolute;
  font-size: 19px;
  color: #757575;
}

.floor>.title_box {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.floor>.msg_box {
  display: flex;
  align-items: center;
  position: absolute;
  right: 8px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 11px;
}

.title {
  font-size: 17px;
  margin-left: 25px;
}

.from {
  font-size: 13px;
  color: #9e9e9e;
  margin-bottom: 25px;
}
