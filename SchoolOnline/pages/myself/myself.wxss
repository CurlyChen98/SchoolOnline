/* myself.wxss */
@import "../../utils/template.wxss";

.self {
  display: flex;
  flex-direction: column;
  padding: 0 20px 0 20px;
  color: #202020;
  font-size: 15px;
}

.self>.selfT {
  align-items: center;
  display: flex;
  position: relative;
  height: 40px;
  box-sizing: border-box;
  width: 100%;
}

.self>.selfT>i {
  margin-right: 15px;
  font-size: 20px;
  color: #747474;
}

.self>.selfT::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #e7e7e7;
}

.userAva {
  width: 70px;
  height: 70px;
  margin-right: 15px;
  border-radius: 70px;
  overflow: hidden;
}

.user {
  display: flex;
  align-items: center;
  margin: 10px 0 10px 0 ;
}
