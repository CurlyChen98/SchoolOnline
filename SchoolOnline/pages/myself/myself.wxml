<!-- myself.wxml -->
<view class='self'>
  <view class='ava'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='selfT nickname'>
    <open-data type="userNickName"></open-data>
  </view>
  <view class='selfT'>
    <text>{{uanme}}</text>
  </view>
  <view class='selfT'>
    <text>{{uclass}}</text>
  </view>
  <view class='selfT'>
    <text bindlongpress='superCheck'>{{rlevel}}</text>
  </view>
  <view class='selfT'>
    <text bindtap='jump' data-type='mygroup'>我的小组</text>
  </view>
  <view class='selfT'>
    <text bindtap='jump' data-type='mytopic'>我的话题</text>
  </view>
  <view class='selfT'>
    <text bindtap='jump' data-type='uploadFiles'>作业提交</text>
  </view>
  <view class='selfT'>
    <text bindtap='jump' data-type='setting'>设置</text>
  </view>
</view>

<modal hidden="{{superhidden}}" title="请输入老师密匙" confirm-text="提交" bindconfirm="confirm" no-cancel="true">
  <input placeholder="Key" bindblur="superinput" placeholder="请输入" value='{{key}}'></input>
</modal>