<!-- myself.wxml -->
<view class='self'>
  <view class='user'>
    <view class='userAva'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data type="userNickName"></open-data>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-brush'></i>
    <text decode='true'>{{uanme}}&nbsp;{{rlevel}}</text>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-collection'></i>
    <text>{{cname}}</text>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-manage'></i>
    <text bindtap='jump' data-type='mygroup'>我的小组</text>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-flag'></i>
    <text bindtap='jump' data-type='mytopic'>我的话题</text>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-document'></i>
    <text bindtap='upLoadFiles'>作业提交</text>
  </view>
  <view class='selfT'>
    <i class='iconfont icon-setup'></i>
    <text bindtap='jump' data-type='setting'>设置</text>
  </view>
</view>