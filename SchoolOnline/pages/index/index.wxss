/**index.wxss**/

.arrcourse {
  display: flex;
  flex-direction: column;
  margin: 10px 0 0 0;
}

.course {
  border-bottom: 1px #f0f3fa solid;
  display: flex;
  padding: 8px 13px 8px 13px;
  position: relative;
}

.course>.img{
  width: 80px;
  border-radius: 3px
}

.course>view{
  margin-left: 10px;
}

.course>view>.course-date{
  position: absolute;
  right: 13px;
  bottom: 8px;
  color: #c8c8c8;
  font-size: 11px;
}

.tip{
  text-align: center;
  color: #c8c8c8;
}