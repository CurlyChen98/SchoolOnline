/**index.wxss**/

.classroom{
  background-color: #03a8f3;
  color: #f9f9f9;
  font-size: 12px;
  padding: 3px 0 3px 0;
  position: fixed;
  z-index: 99;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.arrcourse{
  color: #f9f9f9;
  font-size: 16px;
  padding-top: 30px;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.arrcourse>.course{
  background-color: #5f7c8a;
  width: 95%;
  margin-bottom: 15px;
  position: relative;
  border-radius: 5px;
  height: 100px;
  padding: 8px;
  box-sizing: border-box;
}