<!-- topic.wxml -->

<wxs module="template" src="../../utils/template.wxs"></wxs>

<view id='arrorder'>
  <!-- 日期选择器 -->
  <view>
    <picker mode="date" value="{{today}}" start="{{befday}}" end="{{lastdate}}" bindchange="dateChange">
      <i class="iconfont icon-activity_fill" style="font-size: 13px;">{{today}}</i>
    </picker>
  </view>
  <!-- 顺序选择器 -->
  <view>
    <picker bindchange="orderChange" value="{{order}}" range="{{arrOrder}}">
      <i class="iconfont icon-dynamic_fill" style="font-size: 13px;">{{arrOrder[order]}}</i>
    </picker>
  </view>
  <!-- 添加话题按钮 -->
  <view bindtap="jumpcreate">
    <i class="iconfont icon-label_fill" style="font-size: 13px;">创建话题</i>
  </view>
</view>

<view class='arrTopic' wx:for="{{arrTopic}}" wx:for-index="index" wx:for-item="item" wx:key="topData" data-taid='{{item.taid}}' bindtap='jumpnote'>
  <view class='title_box'>
    <i class='iconfont icon-accessory'></i>
    <text class='title'>{{item.topTitle}}</text>
  </view>
  <text class='from' decode="true">{{item.uName}}&nbsp;{{item.topData}}</text>
  <view class='course_box'>
    <text class='num_msg' decode="true">{{item.couTitle}}</text>
  </view>
  <view class='like_box'>
    <i class='iconfont icon-like_fill'></i>
    <text class=''>0</text>
  </view>
  <view class='msg_box'>
    <i class='iconfont icon-message'></i>
    <text class=''>0</text>
  </view>
</view>