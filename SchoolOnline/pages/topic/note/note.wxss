/* note.wxss */

.box {
  margin-top: 15px;
  margin-bottom: 100px;
}

.titlebox {
  border-bottom: 15px #dadada solid;
  position: relative;
}

.titlebox >.title {
  padding-left: 20px;
  padding-right: 10px;
  box-sizing: border-box;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  border-bottom: 1px #dadada solid;
  padding-bottom: 15px;
  color: #03a9f4;
}

.titlebox >.name {
  padding-left: 20px;
  margin-top: 10px;
  /* font-size: 15px; */
}

.titlebox >.date {
  padding-left: 20px;
  font-size: 13px;
  margin-top: 3px;
  color: #9e9e9e;
}

.titlebox >.detail {
  padding-left: 20px;
  padding-right: 10px;
  margin-top: 20px;
  margin-bottom: 20px;
  display: block;
  word-break: break-all;
}

.detailbox {
  border-bottom: #e0e1db 1px solid;
  margin-top: 10px;
  position: relative;
  font-size: 14px;
  color: #818e9e;
}

.detailbox>.detail {
  line-height: 25px;
  margin-bottom: 60px;
  font-size: 16px;
  color: #343434;
  display: block;
  word-break: break-all;
}

.detailbox >.name {
  position: absolute;
  left: 0;
  bottom: 10px;
}

.detailbox >.date {
  position: absolute;
  right: 10px;
  bottom: 10px;
}

.send {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.useinput {
  box-sizing: border-box;
  font-size: 15px;
  background-color: #dcdcdd;
  width: 100%;
  height: 50px;
  padding: 10px;
  border-radius: 5px;
  z-index: 99;
  display: flex;
  word-break: break-all;
}

.submit {
  border-radius: 0 5px 5px 0;
  height: 30px;
  width: 100%;
  text-align: center;
  z-index: 99;
  display: flex;
}
