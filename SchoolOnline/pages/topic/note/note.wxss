/* note.wxss */

.title {
  font-weight: bolder;
  font-size: 17px;
  padding: 10px 15px 10px 15px;
  border-bottom: 1px #f0f3fa solid;
}

.titleBox {
  position: relative;
  border-bottom: 10px solid #efefef;
  padding-left: 50px;
  padding-right: 15px;
}

.titleBox>image {
  width: 30px;
  height: 30px;
  border-radius: 30px;
  position: absolute;
  margin-top: 2px;
  left: 10px;
}

.titleBox>.name {
  margin-top: 8px;
  font-size: 14px;
}

.titleBox>.date {
  color: #9e9e9e;
  font-size: 12px;
}

.titleBox>.detail {
  margin: 10px 0 10px 0;
  line-height: 25px;
  word-break:break-all;
}

.detailBox {
  position: relative;
  padding: 5px 15px 5px 50px;
  border-bottom: 1px solid #f0f3fa;
}

.detailBox>image {
  width: 30px;
  height: 30px;
  border-radius: 30px;
  position: absolute;
  margin-top: 9px;
  left: 10px;
}

.detailBox>.name {
  margin-top: 8px;
  font-size: 14px;
}

.detailBox>.date {
  color: #9e9e9e;
  font-size: 12px;
}

.detailBox>.detail {
  margin: 10px 0 10px 0;
  line-height: 25px;
  word-break:break-all;
}

.line {
  height: 40px;
}

.send {
  width: 100%;
  height: 120px;
  position: fixed;
  z-index: 99;
  bottom: 0px;
  background-color: #f8f8f8;
  font-size: 15px;
  padding: 10px 10px 10px 10px;
  box-sizing: border-box;
}

.send>form .useinput {
  width: 100%;
  background-color: #ffffff;
  padding: 5px;
  height: 50px;
  box-sizing: border-box;
}

.send>form .uName {
  position: absolute;
  left: 15px;
  bottom: 20px;
}

.send>form .inButton {
  position: absolute;
  right: 0px;
  bottom: 10px;
}

.send>form button {
  font-size: 14px;
  border: none;
  color: #03a9f4;
}

.sendFirst {
  font-size: 15px;
  position: fixed;
  z-index: 97;
  bottom: 0px;
  background-color: #f5f9fc;
  width: 100%;
  height: 40px;
  padding: 2px 10px 2px 10px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.sendFirst text {
  display: block;
  width: 100%;
  height: 20px;
  background-color: #ebf0f6;
  padding: 2px;
  border-radius: 5px;
  color: #a4a4a4;
}

.lock {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  background-color: black;
  opacity: 0.5;
}
