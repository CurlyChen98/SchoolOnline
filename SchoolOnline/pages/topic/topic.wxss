/* topic.wxss */

.arrTopic {
  margin-top: 5px;
}

.arrTopic>.topic {
  padding: 10px 15px 5px 15px;
  border-bottom: #efefef solid 5px;
  position: relative;
}

.arrTopic>.topic>.unameBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 14px;
}

.arrTopic>.topic>.unameBox>image {
  width: 25px;
  height: 25px;
  border-radius: 30px;
  margin-right: 10px;
}

.arrTopic>.topic>.date {
  color: #c8c8c8;
  font-size: 12px;
}

.arrTopic>.topic>.title {
  margin: 10px 0 40px 0;
}

.samllBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 12px;
  position: absolute;
  bottom: 10px;
  color: #c8c8c8;
}

.samllBox>i {
  margin-bottom: -1px;
}

.arrTopic>.topic>.likeBox {
  right: 10px;
}

.arrTopic>.topic>.megBox {
  right: 50px;
}

.arrTopic>.topic>.couTitle {
  left: 15px;
  color: #a4a4a4;
}

.arrorder {
  position: absolute;
  bottom: 30px;
  right: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.arrorder>view{
  position: relative;
  box-shadow: 0 0 10px 1px #c8c8c8;
}

.arrorder>view i{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

.arrorder>.special {
  width: 54px;
  height: 54px;
  border-radius: 54px;
  color: #fff;
  background-color: #03a8f3;
}

.arrorder>.special i {
  height: 32px;
  width: 32px;
  font-size: 32px;
}

.arrorder>.common{
  position: absolute;
  opacity: 0;
  top: 0;
  width: 40px;
  height: 40px;
  border-radius: 40px;
  color: #03a8f3;
  background-color: #fff;
}

.arrorder>.common i{
  height: 22px;
  width: 22px;
  font-size: 22px;
}