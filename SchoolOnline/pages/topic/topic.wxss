/* topic.wxss */

#arrorder {
  font-size: 13px;
  line-height: 30px;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 99;
  box-sizing: border-box;
  color: #fff;
}

#arrorder>view {
  border: 1px #fff solid;
  background-color: #03a9f4;
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 5px;
}

.arrTopic {
  padding: 10px;
  border-bottom: #d6d6d6 inset 1px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.arrTopic text {
  margin-left: 25px;
}

.arrTopic>.title_box {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.arrTopic>.title_box>i {
  position: absolute;
  font-size: 19px;
  color: #757575;
  margin-bottom: -2px;
}

.arrTopic>.title_box>text {
  width: 90%;
}

.arrTopic>.from {
  font-size: 11px;
  color: #9e9e9e;
  margin-bottom: 30px;
}

.arrTopic>.course_box {
  display: flex;
  align-items: center;
  position: absolute;
  left: 10px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.arrTopic>.like_box {
  display: flex;
  align-items: center;
  position: absolute;
  right: 50px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.like_box>i {
  margin-bottom: -1px;
}

.like_box>text {
  margin-left: 0;
}

.arrTopic>.msg_box {
  display: flex;
  align-items: center;
  position: absolute;
  right: 10px;
  bottom: 8px;
  color: #d6d6d6;
  font-size: 12px;
}

.msg_box>i {
  margin-bottom: -1px;
}

.msg_box>text {
  margin-left: 0;
}