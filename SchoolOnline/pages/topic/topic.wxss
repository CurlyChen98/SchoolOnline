/* topic.wxss */

#arrorder {
  font-size: 13px;
  line-height: 30px;
  width: 100%;
  display: flex;
  position: fixed;
  top: 0;
  justify-content: space-around;
  align-items: center;
  z-index: 99;
  color: #fff;
}

#arrorder>view {
  border: 1px #fff solid;
  box-sizing: border-box;
  background-color: #03a9f4;
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 5px;
}

.arrTopic {
  margin-top: 35px;
}

.arrTopic>.topic {
  padding: 5px 15px 5px 15px;
  border-bottom: #d6d6d6 inset 1px;
  position: relative;
}

.arrTopic>.topic>.unameBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #9e9e9e;
  font-size: 14px;
}

.arrTopic>.topic>.unameBox>image {
  width: 25px;
  height: 25px;
  border-radius: 30px;
  margin-right: 10px;
}

.arrTopic>.topic>.date{
  color: #d6d6d6;
  font-size: 12px;
}

.arrTopic>.topic>.title{
  margin: 10px 0 30px 0;
}

.samllBox{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 12px;
  position: absolute;
  bottom: 5px;
  color: #d6d6d6;  
}

.samllBox>i{
  margin-bottom: -1px;
}

.arrTopic>.topic>.likeBox{
  right: 10px;
}
.arrTopic>.topic>.megBox{
  right: 50px;
}
.arrTopic>.topic>.couTitle{
  left: 15px;
  color: #9e9e9e;
}