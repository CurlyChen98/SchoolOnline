/* topic.wxss */

.arrTopic {
  margin-top: 5px;
}

.arrTopic>.topic {
  padding: 5px 15px 5px 15px;
  border-bottom: #d6d6d6 inset 1px;
  position: relative;
}

.arrTopic>.topic>.unameBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #9e9e9e;
  font-size: 14px;
}

.arrTopic>.topic>.unameBox>image {
  width: 25px;
  height: 25px;
  border-radius: 30px;
  margin-right: 10px;
}

.arrTopic>.topic>.date {
  color: #d6d6d6;
  font-size: 12px;
}

.arrTopic>.topic>.title {
  margin: 10px 0 30px 0;
}

.samllBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 12px;
  position: absolute;
  bottom: 5px;
  color: #d6d6d6;
}

.samllBox>i {
  margin-bottom: -1px;
}

.arrTopic>.topic>.likeBox {
  right: 10px;
}

.arrTopic>.topic>.megBox {
  right: 50px;
}

.arrTopic>.topic>.couTitle {
  left: 15px;
  color: #9e9e9e;
}

.arrorder {
  position: absolute;
  top: 20px;
  right: 20px;
}

.arrorder>view {
  width: 36px;
  height: 36px;
  border-radius: 36px;
  background-color: #03a8f3;
  font-size: 40px;
  position: relative;
  margin-bottom: 10px;
}

.arrorder>view i {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  height: 24px;
  width: 22px;
  font-size: 22px;
  color: #ffffff;
}
