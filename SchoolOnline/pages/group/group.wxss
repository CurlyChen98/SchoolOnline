/* group.wxss */

.bigshow {
  width: 100%;
  margin-bottom: 100px;
  color: #343434;
}

.show {
  padding-left: 10px;
  z-index: 10;
}

.show>.showname {
  font-size: 16px;
  z-index: 10;
}

.show>.showinput {
  width: 60%;
  background-color: #e5e3e8;
  border-radius: 8px;
  padding: 5px;
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 10px;
  font-size: 16px;
  line-height: 20px;
  z-index: 10;
  display: block;
  word-break: break-all;
}

.send {
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 99;
}

.send>form {
  width: 100%;
  z-index: 99;
}

.useinput {
  box-sizing: border-box;
  font-size: 15px;
  background-color: #dcdcdd;
  width: 100%;
  height: 50px;
  padding: 10px;
  border-radius: 5px;
  z-index: 99;
  display: flex;
  word-break: break-all;
}

.submit {
  border-radius: 0 5px 5px 0;
  height: 30px;
  width: 100%;
  text-align: center;
  z-index: 99;
  display: flex;
}
