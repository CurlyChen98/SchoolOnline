var DateFr = {
  getDate: function(time, splitStr) {
    if (!time) return '';

    var date = getDate(time);
    var M = date.getMonth() + 1;
    var y = date.getFullYear();
    var d = date.getDate();

    if (M < 10) M = "0" + M;
    if (d < 10) d = "0" + d;

    if (splitStr)
      return M + splitStr + d;
  }
};

var Msg = {
  msgCount: function(num) {
    num = parseInt(num);
    if (num > 99) {
      num = "99+";
    }
    return num;
  }
};

